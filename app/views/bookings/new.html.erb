

  <div class="booking-shoe">
    <div id="image-book">
      <%= cl_image_tag @shoe.photo.key, height: 250, width: 250, class:"image"%>
    </div>
    <h2 id="booking-title" ><strong><%= @shoe.title %></strong></h2>
      <ul class="booking-lists">
        <li class="bokking-description" >Brand: <strong><%= @shoe.brand %></strong></li>
        <li class="bokking-description" >Size (UK): <strong><%= @shoe.size %></strong></li>
        <li class="bokking-description" >Type: <strong><%= @shoe.category %></strong></li>
        <li class="bokking-description" >Price: <strong><%= @shoe.price %>.00 </strong>/day</li>
      </ul>
  </div>

<div class="form-with-details">
  <div class="booking-form-div">
    <%= simple_form_for [@shoe, @booking], url: shoe_bookings_path, html: { class: "booking-form"} do |f|%>
      <%= f.input :date, as: :date, label: "Rental start date", :input_html => { class: 'field' } %>
      <%= f.input :duration, label: "Rental duration (days)", :input_html => { class: 'field' } %>

        <%= f.button :submit, 'Book now!',  class: "submit-button booking-submit"  %>

    <% end %>
  </div>

</div>
