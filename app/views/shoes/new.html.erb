  <div class="booking-form-div">
    <%= simple_form_for @shoe, url: shoes_path, html: { class: "booking-form"} do |f|%>
      <%= f.input :title, label: "Title (15 Characters Max)", :input_html => { class: 'field' } %>
      <%= f.input :brand, label: "Brand", :input_html => { class: 'field' } %>
      <%= f.input :size, label: "Size", :input_html => { class: 'field' } %>
      <%= f.input :photo, as: :file %>
      <%= f.input :category, collection: ["hiking", "formal", "flippers", "sneakers", "wellies", "industrial", "climbing", "cycling", "sport"], label: "Category", :input_html => { class: 'field' } %>
      <%= f.input :price, label: "Price (Â£)", :input_html => { class: 'field' } %>
      <%= f.input :address, label: "Shoe location (Street Address, Town/City)", :input_html => { class: 'field' } %>
      <%= f.button :submit, 'Save',  class: "submit-button booking-submit"  %>
    <% end %>
  </div>
