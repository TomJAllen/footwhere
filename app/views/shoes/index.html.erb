<h1>Shoes you can rent RIGHT NOW!!!</h1>
<div class="search-container">
  <div class="row justify-content-center">
    <div class="col-sm-8">
    <%= form_tag shoes_path, method: :get, class: 'form-inline' do %>
      <%= text_field_tag :query,
        params[:query],
        class: "form-control flex-grow-1",
        placeholder: "Find your perfect FootWhere"
      %>
      <%= submit_tag "Search", class: "btn btn-primary" %>
    <% end %>
      </div>
    </div>
  </div>
</div>

<div class="map-shoes-container">
  <div class="shoes-div">
    <% @shoes.each do |shoe| %>
      <%= link_to shoe_path(shoe) do %>
        <div class="shoe-info-index">
            <div class="image">
              <%= cl_image_tag shoe.photo.key, height: 250, width: 250, class:"image"%>
          </div>
          <div class="shoe-card-text">
            <h2><%= shoe.title %></h2>
            <div class="card-text-p">
              <p>Brand: <strong><%= shoe.brand %></strong></p>
              <p>Size (UK): <strong><%= shoe.size %></strong></p>
              <p>Type: <strong><%= shoe.category %></strong></p>
              <p>Price: <strong><%= shoe.price %>.00 </strong>/day</p>
            </div>
          <div class="details-container">
            <ul class="details">
              <li><h4 class="title"><%= shoe.title%></h4></li>
              <li class="detail">Brand: <%= shoe.brand %></li>
              <li class="detail">Category: <%= shoe.category %></li>
              <li class="detail">Size (UK): <%= shoe.size %></li>
            </ul>
            <span class="price"><%= shoe.price %>.00 /day</span>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
